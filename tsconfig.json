{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/SinglePost.js",
    "components/home/Card.js",
    "components/post/Form.tsx/Form.tsx",
    "components/Blog.js",
    "components/post/Header.js",
    "components/Footer.js",
    "components/Layout/Cta.js",
    "pages/[slug].js"
  ],
  "exclude": ["node_modules"]
}
